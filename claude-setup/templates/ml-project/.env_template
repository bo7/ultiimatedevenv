# Ultimate Claude Code Development Environment Configuration
# Copy this file to .env in your project directory and customize with your actual values

# =============================================================================
# LLM Configuration for OpenRouter
# =============================================================================
OPENROUTER_API_KEY="your_openrouter_api_key_here"
OPENROUTER_MODEL="openai/gpt-4o"

# =============================================================================
# Claude Code & MCP Configuration
# =============================================================================
DEFAULT_MODEL="deepseek/deepseek-r1-0528"
ZEN_DEFAULT_MODEL="deepseek/deepseek-r1-0528"
ZEN_THINKING_MODE="medium"

# Context7 Configuration
CONTEXT7_API_KEY=""

# =============================================================================
# SQL Server Connection Details for MCP Server
# =============================================================================
SERVER_NAME="your_sql_server_host"
SERVER_PORT=1433
DATABASE_NAME="your_database_name"
SQL_USER="your_sql_username"
SQL_PASSWORD="your_sql_password"
SQL_ENCRYPT=false
TRUST_SERVER_CERTIFICATE=true
CONNECTION_TIMEOUT=30

# =============================================================================
# Legacy SQL Server Connection Details (for direct pyodbc)
# =============================================================================
SQLSERVER_DRIVER="ODBC Driver 18 for SQL Server"
SQLSERVER_HOST="your_sql_server_host"
SQLSERVER_PORT=1433
SQLSERVER_DB="your_database_name"
SQLSERVER_USER="your_sql_username"
SQLSERVER_PASSWORD="your_sql_password"
SQLSERVER_ENCRYPT=yes
SQLSERVER_TRUST_CERTIFICATE=yes

# =============================================================================
# Office Team Configuration
# =============================================================================
OFFICE_LLM_PROVIDER=openrouter
OFFICE_OPENROUTER_API_KEY="your_openrouter_api_key_here"
OFFICE_LLM_MODEL="openai/gpt-4o"

# =============================================================================
# Gmail Office Configuration
# =============================================================================
GMAIL_OFFICE_CLIENT_ID="your_gmail_client_id"
GMAIL_OFFICE_CLIENT_SECRET="your_gmail_client_secret"
GMAIL_OFFICE_REFRESH_TOKEN="your_gmail_refresh_token"
GMAIL_OFFICE_ACCESS_TOKEN="your_gmail_access_token"
GMAIL_OFFICE_SCOPE="https://www.googleapis.com/auth/gmail.modify"

# =============================================================================
# Calendar Office Configuration
# =============================================================================
CALENDAR_OFFICE_CLIENT_ID="your_calendar_client_id"
CALENDAR_OFFICE_CLIENT_SECRET="your_calendar_client_secret"
CALENDAR_OFFICE_REFRESH_TOKEN="your_calendar_refresh_token"
CALENDAR_OFFICE_ACCESS_TOKEN="your_calendar_access_token"
CALENDAR_OFFICE_SCOPE="https://www.googleapis.com/auth/calendar"

# =============================================================================
# Office Workflow Configuration
# =============================================================================
OFFICE_MORNING_HOUR=8
OFFICE_EVENING_HOUR=18
OFFICE_TIMEZONE="Europe/Berlin"
OFFICE_REPORT_EMAIL="your_email@example.com"
OFFICE_REPORT_RECIPIENT="recipient@example.com"
OFFICE_EMAIL_SIGNATURE="Best regards\\nYour Name"

# =============================================================================
# MCP Server Ports
# =============================================================================
GMAIL_MCP_PORT=3001
CALENDAR_MCP_PORT=3002

# =============================================================================
# Git Configuration
# =============================================================================
GIT_TOKEN="your_github_token_here"
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"

# =============================================================================
# Project Specific Variables
# =============================================================================
PROJECT_NAME="my-project"
PROJECT_DESCRIPTION="My awesome project"
AUTHOR_NAME="Your Name"
AUTHOR_EMAIL="your.email@example.com"
USERNAME="your-github-username"

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=false
LOG_LEVEL="INFO"
ENVIRONMENT="development"
